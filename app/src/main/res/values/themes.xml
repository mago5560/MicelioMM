<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MicelioMM" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:navigationBarColor">@color/color_primary</item>
        <!--  <item name="android:windowLightStatusBar">true</item> texto oscuro -->
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <!-- Para versiones más recientes, puedes necesitar estos también -->
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:navigationBarColor">@color/color_primary_dark</item>
    </style>

    <style name="Theme.MicelioMM" parent="Base.Theme.MicelioMM" />

    <style name="SplashTheme" parent="Base.Theme.MicelioMM">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>