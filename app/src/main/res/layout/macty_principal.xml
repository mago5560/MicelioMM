<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MactyPrincipal">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_marginBottom="50dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph_principal"/>



    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bootomAppBar"
        android:layout_gravity="bottom"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleMargin="5dp"
        android:background="@color/color_primary"
        app:backgroundTint="@android:color/white"
        android:theme="@style/AppTheme">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu="@menu/mnu_nav_bar_principal"
            android:id="@+id/bottomNavigationView"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/file_download_icon"
        android:id="@+id/fabNuevaVenta"
        app:fabSize="normal"
        app:layout_anchor="@id/bootomAppBar"
        app:tint="@android:color/white"
        app:backgroundTint="@color/color_primary_dark"
        android:theme="@style/AppTheme"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>