<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MactyActualizarHojaRuta">

    <include
        android:id="@+id/back_activity"
        layout="@layout/item_nav_bar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_activity"
        android:fillViewport="true"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ubicacion..."
                android:textSize="16sp"
                android:visibility="gone"
                android:textColor="@android:color/holo_red_light"/>

            <include layout="@layout/item_hoja_ruta_resumen"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtVale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nextFocusDown="@id/txtGalones"
                    android:hint="Vale"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtGalones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Galones"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtOtrosGastos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Otros Gastos"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtkmInicial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Km Inicial"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtkmFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Km Final"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- BotÃ³n Guardar -->
            <Button
                android:id="@+id/btnGrabar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="GRABAR"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>